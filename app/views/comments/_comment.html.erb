<div class="row comment-fix align-items-center text-center" style="margin-left:100px;">
  <div class="col-md-2">
    <section class="chef_info">
      <%= gravatar_for(comment.chef, size: 60) %>
    </section>
  </div>
  <div class="col-md-8 well mx-auto">
    <p><%= comment.description %></p>
    <p>
      <span class="quiet"><small>Created: <%= time_ago_in_words(comment.created_at) %> ago by <%= comment.chef.name %></small></span>
    </p>
  </div>
</div>
