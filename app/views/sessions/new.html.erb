<%= render 'shared/page_title', title:"Login"%>

<div class="row">
  <div class="col-md-12">
    <%= form_for(:session, :html => {class: "form-horizontal", role: "form"}, url: login_path) do |f| %>

      <div class="form-group">
        <div class="control-label col-md-2">
          <%= f.label :email %>
        </div>
        <div class="col-md-8">
          <%= f.text_field :email, class: "form-control", placeholder:"Email of chef", autofocus: true %>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-md-2">
          <%= f.label :password %>
        </div>
        <div class="col-md-8">
          <%= f.text_field :password, class: "form-control", placeholder:"Enter your password"%>
        </div>
      </div>
      
      <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
          <%= f.submit "Log in", class: "btn btn-primary btn-lg", style: "margin-left:230px;"%>
        </div>
      </div>
    <% end %>

    <div class="col-md-4 col-md-offset-4", style= "margin-left: 370px;">
      [<%= link_to "Don't have and account? Sign up now!", signup_path %>]
    </div>

  </div>
</div>